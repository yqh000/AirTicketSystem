<FlowPane fx:id="paneLogin" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
          prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="spg.Login">
    <children>
        <GridPane prefHeight="400.0" prefWidth="600.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="240.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label alignment="CENTER" prefHeight="80.0" prefWidth="120.0" text="用户名" textAlignment="JUSTIFY"
                       GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <font>
                        <Font name="SimHei" size="24.0"/>
                    </font>
                </Label>
                <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="80.0" prefWidth="120.0" text="密  码"
                       GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <font>
                        <Font name="SimHei" size="24.0"/>
                    </font>
                </Label>
                <BorderPane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <right>
                        <Button fx:id="buttonLogin" mnemonicParsing="false" prefHeight="60.0" prefWidth="100.0"
                                text="安全登录" textAlignment="JUSTIFY" BorderPane.alignment="CENTER">
                            <font>
                                <Font name="SimHei" size="18.0"/>
                            </font>
                        </Button>
                    </right>
                </BorderPane>
                <BorderPane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="2" GridPane.rowIndex="3">
                    <right>
                        <Button fx:id="buttonCancel" mnemonicParsing="false" prefHeight="60.0" prefWidth="100.0"
                                text="返回" textAlignment="JUSTIFY" BorderPane.alignment="CENTER">
                            <font>
                                <Font name="SimHei" size="18.0"/>
                            </font>
                        </Button>
                    </right>
                </BorderPane>
                <TextField fx:id="textUsername" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                <PasswordField fx:id="textPassword" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
            </children>
        </GridPane>
    </children>
</FlowPane>
